@model IEnumerable<TennisClubRanking.Models.RankingPoints>

@{
    ViewData["Title"] = "Points History";
}

<div class="container mt-4">
    <h2>Points History</h2>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>Match</th>
                    <th>Points Earned</th>
                    <th>Result</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var points in Model)
                {
                    <tr>
                        <td>@points.DateEarned.ToString("MM/dd/yyyy")</td>
                        <td>
                            <a asp-controller="Matches" asp-action="Details" asp-route-id="@points.MatchId">
                                View Match
                            </a>
                        </td>
                        <td>@points.Points</td>
                        <td>
                            @if (points.IsWinnerPoints)
                            {
                                <span class="badge badge-success">Winner</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Participant</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Leaderboard" class="btn btn-primary">Back to Leaderboard</a>
    </div>
</div>
