@model IEnumerable<TennisClubRanking.Models.RankingHistory>

@{
    ViewData["Title"] = "Ranking History";
}

<div class="container mt-4">
    <h2>Ranking History</h2>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>Rank</th>
                    <th>Total Points</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var history in Model)
                {
                    <tr>
                        <td>@history.RecordedDate.ToString("MM/dd/yyyy")</td>
                        <td>@history.Rank</td>
                        <td>@history.TotalPoints</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Leaderboard" class="btn btn-primary">Back to Leaderboard</a>
    </div>
</div>
