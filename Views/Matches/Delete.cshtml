@model TennisClubRanking.Models.Match

@{
    ViewData["Title"] = "Delete Match";
}

<div class="container mt-4">
    <h2>Delete Match</h2>

    <h3>Are you sure you want to delete this match?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-3">Match Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Players</dt>
            <dd class="col-sm-9">@Model.HomePlayer?.FullName vs @Model.AwayPlayer?.FullName</dd>

            <dt class="col-sm-3">Scheduled Date/Time</dt>
            <dd class="col-sm-9">@Model.ScheduledDateTime.ToString("g")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
